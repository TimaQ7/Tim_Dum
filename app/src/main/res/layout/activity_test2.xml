<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/answer0"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:hint="@string/answer"
        android:inputType="number"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tvMessage"
        app:layout_constraintEnd_toEndOf="@+id/tvGame2"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/tvGame2" />

    <Button
        android:id="@+id/butCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/roboto_bold"
        android:onClick="onClickCheck"
        android:text="@string/check"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/butBack2"
        app:layout_constraintEnd_toEndOf="@+id/answer0"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/answer0" />

    <Button
        android:id="@+id/butBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:fontFamily="@font/roboto_bold"
        android:onClick="onClickBack"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/answer0"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/answer0" />

    <TextView
        android:id="@+id/tvGame2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compute"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/tvSign0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bNext"
        app:layout_constraintEnd_toEndOf="@+id/answer0"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/answer0" />

    <TextView
        android:id="@+id/tvText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="b"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tvSign0"
        app:layout_constraintEnd_toEndOf="@+id/tvGame2"
        app:layout_constraintTop_toTopOf="@+id/tvSign0" />

    <TextView
        android:id="@+id/tvSign0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="+"
        android:fontFamily="@font/roboto_bold"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/answer0"
        app:layout_constraintEnd_toStartOf="@+id/tvText01"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toEndOf="@+id/tvText00" />

    <TextView
        android:id="@+id/tvText00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a"
        android:fontFamily="@font/roboto_bold"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tvSign0"
        app:layout_constraintStart_toStartOf="@+id/tvGame2"
        app:layout_constraintTop_toTopOf="@+id/tvSign0" />

    <Button
        android:id="@+id/bNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:onClick="onClickNext"
        android:text="Next"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/butBack2"
        app:layout_constraintEnd_toEndOf="@+id/answer0"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/answer0" />
</androidx.constraintlayout.widget.ConstraintLayout>